  <thead>
    <tr>
      <th>Nume</th>
      <th>Categorie</th>
      <th>Subcategorie</th>
      <th>Ocazie</th>
      <th>Preț</th>
      <th>Disponibilitate</th>
      <th>Nr. flori</th>
      <th>Acțiuni</th>
    </tr>
  </thead>
  <tbody id="tabel-produse">
    <!-- Populat din JS -->
  </tbody>
</table>
